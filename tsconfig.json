{
  "extends": "astro/tsconfigs/strict",
  "include": ["**/*.ts", "**/*.astro"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@helpers/*": ["src/helpers/*"],
      "@i18n/*": ["src/i18n/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["src/images/*"]
    }
  }
}
