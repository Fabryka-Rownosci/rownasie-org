---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { class: classes, as: Tag = "button", ...props } = Astro.props;
---

{/* NOTE: Website uses only one button type, so primary is hard coded */}
<Tag
  class:list={[
    "rounded-md text-white px-4 py-3 lg:px-5 lg:py-4 bg-primary border-primary-600 b-1 hover:bg-primary-400 text-lg",
    classes,
  ]}
  {...props}
>
  <slot />
</Tag>
