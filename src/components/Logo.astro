---
import { Image } from "astro:assets";

import { useTranslation } from "@i18n/useTranslation";
import { Languages } from "@i18n/languages";

import logoPl from "@images/logo/logo_pl.png";
import logoEn from "@images/logo/logo_en.png";

import { type Language } from "@i18n/languages";

interface Props {
  language: Language;
}

const { language } = Astro.props;
const t = useTranslation(language);
---

<div class="max-w-600px w-full px-3 xl:w-1/3 xl:px-0">
  <Image
    src={language === Languages.PL ? logoPl : logoEn}
    alt={t("images_alt.logo")}
  />
</div>
