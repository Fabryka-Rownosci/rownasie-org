---
import { Image } from "astro:assets";

import { useTranslation } from "@i18n/useTranslation";

import type { LocalImageProps } from "astro:assets";
import type { Language } from "@i18n/languages";

interface Props {
  photo: LocalImageProps["src"];
  name: string;
  title: string;
  language: Language;
}

const { photo, name, title, language } = Astro.props;
const t = useTranslation(language);
---

<div
  class="flex flex-col md:flex-row justify-between w-full relative items-center"
>
  <div class="w-1/2 mb-5 md:mb-0 md:w-1/3">
    <Image
      src={photo}
      alt={t("images_alt.person_photo")}
      class="rounded-full"
    />
  </div>
  <div class="w-full md:w-60%">
    <h3 class="font-bold mb-3">{name}</h3>
    <h4 class="font-bold mb-5">{title}</h4>
    <div class="text-xl">
      <slot />
    </div>
  </div>
</div>
