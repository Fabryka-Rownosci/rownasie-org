---
import { Image, getImage } from "astro:assets";
import img from "../images/S3.png";

const { photo, name, title } = Astro.props;
interface Props {
  photo: any;
  name: string;
  title: string;
}
---

<div
  class="flex flex-col md:flex-row justify-between w-full relative items-center"
>
  <div class="w-1/2 mb-5 md:mb-0 md:w-1/3">
    <Image src={photo} alt="fff" class="rounded-full" />
  </div>
  <div class="w-full md:w-2/3">
    <h3 class="font-bold mb-3">{name}</h3>
    <h4 class="font-bold mb-5">{title}</h4>
    <div class="text-xl">
      <slot />
    </div>
  </div>
</div>
