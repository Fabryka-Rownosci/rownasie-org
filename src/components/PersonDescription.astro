---
import { Image, getImage } from "astro:assets";
import img from "../images/S3.png";

const { photo, name, title } = Astro.props;
interface Props {
  photo: any;
  name: string;
  title: string;
}
---

<div class="flex flex-row justify-between w-full relative items-center">
  <div class="w-1/3">
    <Image
      width="250"
      height="250"
      src={photo}
      alt="fff"
      class="rounded-full"
    />
  </div>
  <div class="w-2/3">
    <h2 class="text-4xl font-bold mb-3">{name}</h2>
    <h3 class="text-2xl font-bold mb-5">{title}</h3>
    <div class="text-xl">
      <slot />
    </div>
  </div>
</div>
