---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="float-right w-6/10 my-5">
  <div class="inline-block border-#ef6c92 border-t-12">
    <h3 class="text-6xl my-7 font-bold">
      {title}
    </h3>
  </div>
  <div class="w-9/10">
    <slot />
  </div>
</section>
