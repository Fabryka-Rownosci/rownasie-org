---
import toSlug from "../helpers/toSlug.mts";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class="float-right w-6/10 mt-5 mb-25"
  data-section-slug={toSlug(title)}
>
  <div class="inline-block border-#ef6c92 border-t-12">
    <h3 class="text-6xl mt-7 mb-10 font-bold">
      {title}
    </h3>
  </div>
  <div class="w-9/10">
    <slot />
  </div>
</section>
